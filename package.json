{
    "name": "systemverilog",
    "displayName": "SystemVerilog - Language Support",
    "description": "Language support for Verilog / SystemVerilog",
    "version": "0.3.2",
    "publisher": "eirikpre",
    "author": {
        "name": "Eirik Presteg√•rdshus",
        "email": "eirikpre@gmail.com"
    },
    "license": "MIT",
    "keywords": [
        "verilog",
        "systemverilog",
        "syntax",
        "highlighting",
        "hdl"
    ],
    "icon": "docs/icon2.png",
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eirikpre/VSCode-SystemVerilog"
    },
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:systemverilog",
        "onLanguage:verilog"
    ],
    "contributes": {
        "languages": [
            {
                "id": "systemverilog",
                "aliases": [
                    "SystemVerilog",
                    "systemverilog",
                    "System Verilog",
                    "Systemverilog"
                ],
                "extensions": [
                    ".sv",
                    ".svh"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "verilog",
                "aliases": [
                    "Verilog",
                    "verilog"
                ],
                "extensions": [
                    ".v",
                    ".vh"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "systemverilog",
                "path": "./snippets/systemverilog.json"
            },
            {
                "language": "verilog",
                "path": "./snippets/systemverilog.json"
            }
        ],
        "grammars": [
            {
                "language": "systemverilog",
                "scopeName": "text.systemverilog",
                "path": "./syntaxes/systemverilog.tmLanguage.json"
            },
            {
                "language": "verilog",
                "scopeName": "text.systemverilog",
                "path": "./syntaxes/systemverilog.tmLanguage.json"
            }
        ],
        "views": {
            "debug": [
                {
                    "id": "systemverilogModules",
                    "name": "Module Hierarchy"
                },
                {
                    "id": "systemverilogDocuementSymbols",
                    "name": "Document Symbols"
                }
            ]
        },
        "commands": [
            {
                "command": "systemverilog.build_index",
                "title": "SystemVerilog: Build index of modules in workspace"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/node": "^7.0.63",
        "languages": "0.1.3",
        "typescript": "^2.8.3",
        "vscode": "^1.1.17"
    }
}