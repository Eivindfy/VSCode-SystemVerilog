{
    "name": "systemverilog",
    "displayName": "System Verilog - Language Support",
    "description": "Language support for Verilog / System Verilog",
    "version": "0.1.0",
    "publisher": "eirikpre",
    "keywords": [
        "verilog",
        "systemverilog",
        "syntax",
        "highlighting",
        "hdl"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/eirikpre/VSCode-SystemVerilog"
    },
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Languages"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:systemverilog"
    ],
    "contributes": {
        "languages": [
            {
                "id": "systemverilog",
                "aliases": [
                    "SystemVerilog",
                    "systemverilog",
                    "System Verilog",
                    "Systemverilog"
                ],
                "extensions": [
                    ".sv",
                    ".v"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "systemverilog",
                "scopeName": "text.systemverilog",
                "path": "./syntaxes/systemverilog.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "languages": "0.1.3",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}